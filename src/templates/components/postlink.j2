{% macro post_link(title, published, summary, url)%}

<article>

    <a href="/blog/{{url}}" hx-trigger="click" hx-get="/blog/{{url}}" hx-push-url="true" hx-target="#content-block" hx-replace="innerHTML">
        <div class="post-link">
            <h3>{{title}} <i class="bi bi-box-arrow-up-right"></i></h3>
            <p><time datetime="{{published.date_8601}}"><b>{{published.date_mmddyyy}}</b></time></p>
            <p>{{summary}}</p>
        </div>
    </a>

</article>

{%endmacro%}