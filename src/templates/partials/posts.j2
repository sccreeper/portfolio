{%import "components/postlink.j2" as postlink%}

<title hx-swap-oob="outerHTML:title">Posts - Oscar Peace</title>

<b>{{count}} posts</b>

<span class="float-right" title="RSS">

    <a class="no-underline" href="/rss" download>RSS Feed <i class="bi bi-rss text-orange-600 dark:text-orange-400"></i></a>

</span>

<br>

<form hx-get="/posts" hx-target="#content-block" hx-push-url="true">

    {{ form.prop.label }}
    {{ form.prop() }}

    {{ form.dir.label }}
    {{ form.dir() }}

    {{ form.query.label }}
    {{ form.query() }}

    <button type="submit">Apply</button>

</form>

{% for post in posts %}

{{postlink.post_link(
    post.title,
    post.published,
    post.summary,
    post.url
)}}

{% endfor %}