{% extends "base.j2" %}

{%block head%}

<meta property="og:title" content="{{post.title}}"/>
<meta property="og:type" content="article"/>
<meta property="og:image" content="/og/{{post.url}}"/>
<meta property="og:description" content="{{post.published}} - {{post.summary}}"/>
<meta property="article:published_time" content="{{publish_date}}"/>

{% for tag in post.tags %}
<meta property="article:tag" content="{{tag}}"/>
{% endfor %}

<meta name="description" content="{{post.summary}}"/>
<meta name="tags" content="{{','.join(post.tags)}}"/>

{%endblock head%}

{% block title %}
{{title}}
{% endblock title %}

{% block content %}

{% with post=post, content=content, views=views %}
  {% include "partials/blogpost.j2"%}
{% endwith %}

{% endblock content %}